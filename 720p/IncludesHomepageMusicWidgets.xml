							<height>170</height>
							<aspectratio>stretch</aspectratio>
							<texture background="true" diffuse="maskthumbnail.png">$INFO[Window.Property(LatestSong.1.Thumb)]</texture>
							<visible>!Control.HasFocus(8004)</visible>
