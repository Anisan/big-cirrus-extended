<includes>
	<include name="HomepageMoviesWidget">
		<control type="group">
			<visible>!Window.IsVisible(Favourites)</visible>
			<include>VisibleFadeEffect</include>
			<animation effect="fade" time="300" delay="1000">WindowOpen</animation>
			<animation effect="fade" time="200">WindowClose</animation>
			
			<control type="group">
				<!-- Movie Widgets -->
				<visible>Library.HasContent(Movies) + Container(9000).Hasfocus(10)</visible>
				<animation effect="slide" start="600,0" end="0,0" time="300" delay="300">Visible</animation>
				<animation effect="slide" start="0,0" end="0,-480" time="300">Hidden</animation>
				<!-- RecentlyMovieAdded -->
				<control type="group">
					<posx>0</posx>
					<posy>0</posy>
					<visible>Skin.HasSetting(ShowRecentlyMoviesAddedWidget)</visible>
					<control type="image">
						<description>background</description>
						<posx>920r</posx>
						<aspectratio alignx="left">stretch</aspectratio>
						<posy>0</posy>
						<width>920</width>
						<height>240</height>
						<texture border="10" flipy="true" diffuse="recentlyaddeddiffuse.png">rightlistbackground.png</texture>
					</control>
					<control type="label">
						<description>Title label</description>
						<posx>30r</posx>
						<posy>15</posy>
						<height>20</height>
						<width>450</width>
						<label>31323</label>
						<align>right</align>
						<aligny>center</aligny>
						<font>cirrus_24_Bold</font>
						<textcolor>orange</textcolor>
						<shadowcolor>black</shadowcolor>
					</control>
					<control type="group">
						<posy>20</posy>
						<posx>500r</posx>
						<visible>!Control.HasFocus(8002)</visible>
						<include>IconsMovieRecentlyAdded</include>
					</control>

					<control type="group">
						<visible>Control.HasFocus(8002)</visible>
						<posy>20</posy>
						<posx>500r</posx>
						<control type="label">
							<posx>120</posx>
							<width>533</width>
							<height>25</height>
							<aligny>left</aligny>
							<posy>25</posy>
							<label>[COLOR=orange]Year:[/COLOR] $INFO[Container(8002).ListItem.Property(Year)]</label>
							<font>cirrus_20_Bold</font>
							<textcolor>white</textcolor>
							<shadowcolor>black</shadowcolor>
						</control>
						<control type="label">
							<posx>120</posx>
							<width>533</width>
							<height>50</height>
							<aligny>left</aligny>
							<posy>50</posy>
							<label>[COLOR=orange]Time:[/COLOR] $INFO[Container(8002).ListItem.Property(RunningTime)]</label>
							<font>cirrus_20_Bold</font>
							<textcolor>white</textcolor>
							<shadowcolor>black</shadowcolor>
						</control>
						<control type="textbox">
							<posx>120</posx>
							<posy>75</posy>
							<width>360</width>
							<height>140</height>
							<align>left</align>
							<aligny>top</aligny>
							<font>cirrus_16</font>
							<textcolor>white</textcolor>
							<shadowcolor>black</shadowcolor>
							<label>$INFO[Container(8002).ListItem.label2]</label>
							<autoscroll delay="5000" time="3000" repeat="8000">Skin.HasSetting(AutoScroll)</autoscroll>
						</control>
						<control type="image">
							<description>Main Icon</description>
							<posx>0</posx>
							<posy>25</posy>
							<width>120</width>
							<height>180</height>
							<aspectratio align="left">stretch</aspectratio>
							<texture background="true" >$INFO[Container(8002).ListItem.Thumb]</texture>
							<bordertexture border="8">ThumbShadow.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
					</control>

					<control type="list" id="8002">
						<posx>820r</posx>
						<posy>55</posy>
						<width>320</width>
						<height>200</height>
						<onleft>9000</onleft>
						<onright>8012</onright>
						<onup>8002</onup>
						<ondown>8002</ondown>
						<viewtype label="535">list</viewtype>
						<pagecontrol>-</pagecontrol>
						<scrolltime>0</scrolltime>
						<itemlayout height="40" width="320">
							<control type="label">
								<posx>320</posx>
								<posy>0</posy>
								<width>320</width>
								<height>40</height>
								<font>cirrus_24</font>
								<textcolor>white</textcolor>
								<shadowcolor>black</shadowcolor>
								<selectedcolor>selected</selectedcolor>
								<align>right</align>
								<aligny>center</aligny>
								<label>$INFO[ListItem.Label]</label>
							</control>
						</itemlayout>
						<focusedlayout height="40" width="320">
							<control type="image">
								<posx>0</posx>
								<posy>0</posy>
								<width>330</width>
								<height>40</height>
								<texture border="0,2,0,2">menuitemFO.png</texture>
								<visible>Control.HasFocus(8002)</visible>
