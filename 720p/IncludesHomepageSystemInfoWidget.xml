<includes>
	<include name="HomepageSystemInfoWidget">
		<control type="group">
			<include>VisibleFadeEffect</include> 
			<animation effect="fade" time="300" delay="1000">WindowOpen</animation> 
			<animation effect="fade" time="200">WindowClose</animation> 

			<control type="group">
				<posx>625r</posx>
				<posy>0</posy>
				<width>625</width>
				<height>301</height>
				<visible>Container(9000).Hasfocus(5)</visible> 
				<animation effect="slide" start="600,0" end="0,0" time="300" delay="300">Visible</animation> 
				<animation effect="slide" start="0,0" end="0,-240" time="300">Hidden</animation> 

				<control type="image">
					<description>background</description> 
					<posx>920r</posx> 
					<aspectratio alignx="left">stretch</aspectratio> 
					<posy>0</posy> 
					<width>920</width> 
					<height>380</height> 
					<texture border="10" flipy="true" diffuse="recentlyaddeddiffuse.png">rightlistbackground.png</texture> 
				</control>

				<control type="label" id="52">
					<description>System Info Widget</description> 
					<posx>20r</posx> 
					<posy>10</posy> 
					<width>800</width> 
					<label>System Info Widget</label>
					<align>right</align> 
					<textcolor>orange</textcolor> 
					<shadowcolor>black</shadowcolor> 
					<font>cirrus_20_Bold</font> 
				</control>
				
				<control type="list">
					<posx>0</posx>
					<posy>40</posy>
					<width>600</width>
					<height>340</height>
					<itemlayout width="600" height="34">
						<control type="image">
							<posx>36r</posx>
							<posy>1</posy>
							<width>30</width>
							<height>30</height>
							<texture>$INFO[ListItem.Icon]</texture>
						</control>
						<control type="label">
							<posx>50r</posx>
							<posy>4</posy>
							<width>500</width>
							<height>34</height>
							<font>cirrus_16_Bold</font>
							<scroll>true</scroll>
							<align>right</align> 
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>
					<focusedlayout width="600" height="34">
						<control type="image">
							<posx>36r</posx>
							<posy>1</posy>
							<width>30</width>
							<height>30</height>
							<texture>$INFO[ListItem.Icon]</texture>
						</control>
						<control type="label">
							<posx>50r</posx>
							<posy>4</posy>
							<width>500</width>
							<height>34</height>
							<font>cirrus_16_Bold</font>
							<scroll>true</scroll>
							<align>right</align> 
							<label>$INFO[ListItem.Label]</label>
						</control>
					</focusedlayout>
					<content>
						<item id="1">
							<label>$INFO[Network.IPAddress]</label>
							<onclick>-</onclick>
							<icon>systeminfo/connected.png</icon>
							<visible>System.InternetState</visible>
						</item>
						<item id="2">
							<label>$INFO[Network.IPAddress]</label>
							<onclick>-</onclick>
							<icon>systeminfo/disconnected.png</icon>
							<visible>!System.InternetState</visible>
						</item>
						<item id="3">
							<label>Uptime: $INFO[System.Uptime]</label>
							<onclick>-</onclick>
							<icon>systeminfo/uptime.png</icon>
						</item>
						<item id="4">
							<label>$INFO[System.CpuFrequency] $LOCALIZE[13271] $INFO[System.CPUUsage]</label>
							<onclick>-</onclick>
							<icon>systeminfo/cpu_usage.png</icon>
						</item>
						<item id="5">
							<label>$INFO[System.FreeMemory] $LOCALIZE[31309] $INFO[system.memory(used.percent)]</label>
							<onclick>-</onclick>
							<icon>systeminfo/ram.png</icon>
						</item>
						<item id="6">
							<label>$INFO[System.ScreenWidth] x $INFO[System.ScreenHeight] @ $INFO[System.fps] FPS</label>
							<onclick>-</onclick>
							<icon>systeminfo/resolution.png</icon>
						</item>
						<item id="7">
							<label>$INFO[System.freespacepercent]</label>
							<onclick>-</onclick>
							<icon>systeminfo/harddisk.png</icon>
						</item>
						<item id="8">
							<label>XBMC $INFO[System.BuildVersion] ($INFO[System.BuildDate])</label>
							<onclick>-</onclick>
							<icon>systeminfo/icon32x32.png</icon>
						</item>
						<item id="9">
							<label>Temp GPU: $INFO[System.GPUTemperature]</label> 
							<onclick>-</onclick>
							<icon>systeminfo/sensor.png</icon>
						</item>
						<item id="10">
							<label>Temp CPU: $INFO[System.CPUTemperature]</label> 
							<onclick>-</onclick>
							<icon>systeminfo/sensor.png</icon>
						</item>
					</content>
				</control>
			</control>
		</control>
	</include>
</includes>